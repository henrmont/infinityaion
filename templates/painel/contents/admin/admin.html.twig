{% extends 'painel/painel.html.twig' %}

{% block content %}
<div class="container">
{# Title #}
    <div class="row" id="title">
        <h1>Painel Administrativo</h1>
    </div>
    {# Itens #}
    <div class="row">
        <h3>Itens</h3>
    </div>
    <div class="row">
        <div class="col-lg-4 text-center">
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#incItem">
                Inserir Item
            </button>
            {% include "painel/contents/admin/modals/item_new.html.twig" %}
        </div>
        <div class="col-lg-4 text-center">
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#delItem">
                Excluir Item
            </button>
            {% include "painel/contents/admin/modals/item_del.html.twig" %}
        </div>
        <div class="col-lg-4 text-center">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editItem">
                Editar Item
            </button>
            {% include "painel/contents/admin/modals/item_edit.html.twig" %}
        </div>
    </div>
    <div class="row final">
        <div class="col-lg-4 text-center">
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#incCat">
                Inserir Categoria
            </button>
            {% include "painel/contents/admin/modals/cat_new.html.twig" %}
        </div>
        <div class="col-lg-4 text-center">
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#delCat">
                Excluir Categoria
            </button>
            {% include "painel/contents/admin/modals/cat_del.html.twig" %}
        </div>
        <div class="col-lg-4 text-center">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editCat">
                Editar Categoria
            </button>
            {% include "painel/contents/admin/modals/cat_edit.html.twig" %}
        </div>
    </div>
</div>

{% endblock %}
