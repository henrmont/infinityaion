{# The Modal #}
<div class="modal fade" id="editCat">
  <div class="modal-dialog">
    <div class="modal-content">

      {# Modal Header #}
      <div class="modal-header">
        <h4 class="modal-title">Editar Categoria</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      {# Modal body #}
      <div class="modal-body">
        <form name="formeditcat" action="{{ path('update_type') }}">
        <div class="form-group">
          <label for="editselect">Selecione uma Categoria:</label>
          <select class="form-control" id="editselect" name="editcat">
            {% for item in item_sel %}
              <option value="{{ item.id }}">{{ item.name }}</option>
            {% endfor %}
          </select>
        </div>
        <div class="form-group">
          <label for="name">Novo Nome:</label>
          <input type="text" class="form-control" id="name" name="editname">
        </div>
      </div>

      {# Modal footer #}
      <div class="modal-footer">
        <input type="submit" class="btn btn-info" value="Alterar">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
      </form>
    </div>
  </div>
</div>