{# The Modal #}
<div class="modal fade" id="delCat">
  <div class="modal-dialog">
    <div class="modal-content">

      {# Modal Header #}
      <div class="modal-header">
        <h4 class="modal-title">Excluir Categoria</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      {# Modal body #}
      <div class="modal-body">
        <form name="formdelcat" action="{{ path('delete_type') }}">
        <div class="form-group">
          <label for="delselect">Selecione uma Categoria:</label>
          <select class="form-control" id="delselect" name="delcat">
            {% for item in item_sel %}
              <option value="{{ item.id }}">{{ item.name }}</option>
            {% endfor %}
          </select>
        </div>

      </div>

      {# Modal footer #}
      <div class="modal-footer">
        <input type="submit" class="btn btn-info" value="Excluir">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
      </form>
    </div>
  </div>
</div>